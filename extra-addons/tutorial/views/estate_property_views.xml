<?xml version="1.0"?>
<odoo>

    <record id="tutorial_estate_property_search" model="ir.ui.view">
        <field name="name">tutorial.estate_property.search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Property Search???">
                <field name="name" string="Title" />
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area (sqm)" />
                <field name="facades" string="Facades" />
                <field name="property_type_id" string="Property type" />
                <filter name="state" string="Availability" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
                <filter name="postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>

    <record id="tutorial_estate_property_view_form" model="ir.ui.view">
        <field name="name">tutorial.estate_property.form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <sheet>
                    <group string="Property details" colspan="2">
                        <field name="name"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" string="Description"/>
                                <field name="bedrooms" string="Bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden"/>
                                <field name="garden_area" string="Garden Area (sqm)"/>
                                <field name="garden_orientation" string="Garden Orientation"/>
                                <field name="active" string="Available"/>
                                <field name="property_type_id" string="Property type"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" mode="tree"/>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="buyer_id" string="Buyer"/>
                                <field name="salesperson_id" string="Sales person"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tutorial_estate_property_view_tree" model="ir.ui.view">
        <field name="name">tutorial.estate_property.tree</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name" string="Name"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living area (sqm)"/>
                <field name="expected_price" string="Expected price"/>
                <field name="selling_price" string="Selling price"/>
                <field name="date_availability" string="Available from"/>
                <field name="property_type_id" string="Property type"/>
                <field name="tag_ids" string="Tags" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- Tutorial view -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate properties</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>