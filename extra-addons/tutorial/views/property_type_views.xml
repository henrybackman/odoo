<?xml version="1.0"?>
<odoo>


    <record id="action_property_type_offers" model="ir.actions.act_window">
        <field name="name">Property Type Offers</field>
        <field name="res_model">property_offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="context">{'default_property_type_id': active_id}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Offer
            </p>
        </field>
    </record>

    <record id="tutorial_property_type_view_form" model="ir.ui.view">
        <field name="name">tutorial.property_type.form</field>
        <field name="model">property_type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" field_id="name_0"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button 
                            name="%(action_property_type_offers)d" 
                            type="action" 
                            class="oe_stat_button" 
                            icon="fa-list">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Show Offers</span>
                            </div>
                        </button>
                    </div>
                    <notebook>
                        <page string="Properties" name="properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name" string="Title"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tutorial_property_type_view_tree" model="ir.ui.view">
        <field name="name">tutorial.property_type.tree</field>
        <field name="model">property_type</field>
        <field name="arch" type="xml">
            <tree string="Types">
                <field name="sequence" widget="handle"/>
                <field name="name" string="Name"/>
                <field name="offer_count" string="Offers"/>
            </tree>
        </field>
    </record>

    <record id="action_property_type" model="ir.actions.act_window">
        <field name="name">Property types</field>
        <field name="res_model">property_type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>