<?xml version="1.0"?>
<odoo>

    <record id="tutorial_property_tag_view_form" model="ir.ui.view">
        <field name="name">tutorial.property_tag.form</field>
        <field name="model">property_tag</field>
        <field name="arch" type="xml">
            <form string="Property tag">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tutorial_property_tag_view_tree" model="ir.ui.view">
        <field name="name">tutorial.property_tag.tree</field>
        <field name="model">property_tag</field>
        <field name="arch" type="xml">
            <tree string="Tags">
                <field name="name" string="Name"/>
            </tree>
        </field>
    </record>

    <record id="action_property_tag" model="ir.actions.act_window">
        <field name="name">Property tags</field>
        <field name="res_model">property_tag</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>